{
    "id": "globalbench",
    "name": "GlobalBench",
    "description": "A benchmark for measuring global progress in NLP.",
    "logo":"https://explainaboard.s3.amazonaws.com/benchmarks/figures/gaokao.jpg",
    "visibility": "public",
    "type": "abstract",
    "metrics": [{"name": "F1"}],
    "views": [
        {
            "name": "Linguistic-weighted Global Average",
            "operations": [
                {"op": "max", "group_by": ["source_language"], "skip_groupby_system": true},
                {"op": "mean", "skip_groupby_system": true}
            ]
        },
        {
            "name": "Demographic-weighted Global Average",
            "operations": [
                {"op": "max", "group_by": ["source_language"], "skip_groupby_system": true},
                {"op": "weighted_sum", "weight": "pop_weight", "skip_groupby_system": true}
            ]
        }, 
        {
            "name": "Linguistic-weighted System-by-system Average",
            "operations": [
                {"op": "max", "group_by": ["source_language"], "skip_groupby_system": false},
                {"op": "mean", "skip_groupby_system": false}
            ]
        },
        {
            "name": "Demographic-weighted System-by-system Average",
            "operations": [
                {"op": "max", "group_by": ["source_language"], "skip_groupby_system": false},
                {"op": "weighted_sum", "weight": "pop_weight", "skip_groupby_system": false}
            ]
        }
    ],
    "default_views": ["Linguistic-weighted Global Average", "Demographic-weighted Global Average", "Linguistic-weighted System-by-system Average", "Demographic-weighted System-by-system Average", "Original"]
}   